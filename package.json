{
  "name": "@fink/snippet",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fink-lang/snippet.git"
  },
  "bugs": "https://github.com/fink-lang/snippet/issues",
  "homepage": "https://github.com/fink-lang/snippet",
  "scripts": {
    "default": "run clean test build",
    "clean": "rimraf ./build",
    "build": "run build:*",
    "build:dir": "mkdir -p ./build/pkg/",
    "build:babel": "babel src --out-dir build/pkg --ignore '**/*.test.js'",
    "build:files": "cp ./package.json ./README.md ./LICENSE ./build/pkg/",
    "test": "run lint jest",
    "lint": "run lint:*",
    "lint:js": "eslint --report-unused-disable-directives --ignore-path .gitignore .",
    "jest": "jest --verbose --runInBand --no-cache ",
    "cd": "run clean build release",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@nearmap/eslint-config-base": "^1.1.0",
    "babel-eslint": "^10.0.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.2.2",
    "eslint-cli": "^1.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "jest-cli": "^24.9.0",
    "npx-run": "^2.1.2",
    "semantic-release": "^15.13.24"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
